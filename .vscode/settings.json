{
  // LaTeX runtime
  "latex-workshop.latex.outDir": "%DIR%/temp",
  "latex-workshop.latex.recipes": [
    {
      "name": "Compile ðŸ”ƒ",
      "tools": ["abgabe", "hausaufgabe"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "abgabe",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-jobname=abgabe",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    },

    {
      "name": "hausaufgabe",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "-jobname=hausaufgabe",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    }
  ],
  //needed so that latexworkshop can find the compiled pdf (otherwise tries to look for config.pdf)
  "latex-workshop.latex.jobname": "abgabe",

  // Spell checking tool
  "ltex.language": "de-DE",
  "ltex.enabled": ["latex"]
}
